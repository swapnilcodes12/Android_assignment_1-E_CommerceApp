<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RED"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="2500dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/recylcerView_product_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars"
        />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:id="@+id/recylcerView_product_price"
        android:textStyle="bold"
        android:text="price"
        app:layout_constraintTop_toBottomOf="@id/recylcerView_product_image"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="0dp"
        android:id="@+id/reyclerView_product_name"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/recylcerView_product_price"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>